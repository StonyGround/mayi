<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/grey_light"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <AutoCompleteTextView
            android:id="@+id/et_login_username"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginLeft="13.0dip"
            android:layout_marginRight="13.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/linearlayout"
            android:drawableLeft="@drawable/ic_mobile"
            android:drawablePadding="5.0dip"
            android:hint="请输入您的手机号"
            android:inputType="text"
            android:maxLength="40"
            android:paddingLeft="5.0dip"
            android:paddingRight="10.0dip"
            android:textColorHint="#ffc8cbcb"
            android:textSize="16.0sp" />

        <EditText
            android:id="@+id/et_login_pwd"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_below="@+id/et_login_username"
            android:layout_marginLeft="13.0dip"
            android:layout_marginRight="13.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/linearlayout"
            android:drawableLeft="@drawable/ic_pwd"
            android:drawablePadding="5.0dip"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:maxLength="30"
            android:paddingLeft="5.0dip"
            android:paddingRight="70.0dip"
            android:textColorHint="#ffc8cbcb"
            android:textSize="16.0sp" />

        <LinearLayout
            android:id="@+id/ll_see_wrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_login_pwd"
            android:layout_marginLeft="13.0dip"
            android:layout_marginTop="15.0dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/show_password_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:text="显示密码"
                android:textColor="#ff989dac"
                android:textSize="14sp" />
        </LinearLayout>

        <!--<TextView-->
        <!--android:id="@+id/tv_login"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/ll_see_wrap"-->
        <!--android:layout_marginLeft="13.0dip"-->
        <!--android:layout_marginRight="13.0dip"-->
        <!--android:layout_marginTop="17.0dip"-->
        <!--android:background="@drawable/btn_blue_selector"-->
        <!--android:gravity="center"-->
        <!--android:text="登录" />-->


        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_forget_password"
            android:layout_marginLeft="13.0dip"
            android:layout_marginRight="13.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:padding="10dp"
            android:text="立即登录"
            android:textColor="#ffffff" />


        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_see_wrap"
            android:layout_marginLeft="17.0dip"
            android:layout_marginTop="10.0dip"
            android:text="忘记密码"
            android:textColor="#ff989dac"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_see_wrap"
            android:layout_marginRight="17.0dip"
            android:layout_marginTop="10.0dip"
            android:text="注册账号"
            android:textColor="#ff989dac"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="106.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_weight="1.0"
                android:background="#ffc8cace" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="其他登录方式"
                android:textColor="#ffc8cace"
                android:textSize="12sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_weight="1.0"
                android:background="#ffc8cace" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
